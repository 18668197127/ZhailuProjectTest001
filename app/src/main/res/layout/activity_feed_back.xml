<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingItem.FeedBackActivity">

    <include
        android:id="@+id/layout_settings_title"
        layout="@layout/title_zhailu_b"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:text="请选择您想反馈的问题（必选）"
        android:textColor="#A2A2A2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_settings_title"
        app:layout_constraintVertical_bias="0.02" />

    <RadioGroup
        android:background="#ffffff"
        android:id="@+id/raido_group_feedback"
        android:layout_width="334dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_settings_title"
        app:layout_constraintVertical_bias="0.12">
        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:id="@+id/radio_feedback_1"
            android:buttonTint="@color/blue_recharge"
            android:text="使用异常"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="30dp" />

        <View
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#EBEBEB"
            android:layout_width="298dp"
            android:layout_height="1dp"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:id="@+id/radio_feedback_2"
            android:buttonTint="@color/blue_recharge"
            android:text="改进意见"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="30dp" />

        <View
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#EBEBEB"
            android:layout_width="298dp"
            android:layout_height="1dp"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:id="@+id/radio_feedback_3"
            android:buttonTint="@color/blue_recharge"
            android:text="添加服务"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="30dp" />

        <View
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#EBEBEB"
            android:layout_width="298dp"
            android:layout_height="1dp"/>
        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:id="@+id/radio_feedback_4"
            android:buttonTint="@color/blue_recharge"
            android:text="其他"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="300dp"
            android:layout_height="30dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:text="请补充详细的建议"
        android:textColor="#A2A2A2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/layout_settings_title"
        app:layout_constraintVertical_bias="0.37" />

    <LinearLayout
        android:id="@+id/ll_edit_feedback"
        android:layout_width="334dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_settings_title">

        <EditText
            android:paddingTop="14dp"
            android:paddingLeft="14dp"
            android:gravity="top"
            android:background="@null"
            android:textSize="12sp"
            android:textColorHint="#CCCCCC"
            android:hint="提出您的建议，让宅鹿变得更好"
            android:layout_width="280dp"
            android:layout_height="90dp" />

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom"
            android:text="0/300"
            android:textColor="#A9A9A9"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <View
        android:id="@+id/view11"
        android:layout_width="334dp"
        android:layout_height="136dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_edit_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:text="请提供相关问题相关截图和照片"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11" />

    <TextView
        android:id="@+id/text_feedback_photo_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="0/4"
        android:textColor="#A9A9A9"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedback_recycler"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_feedback_click"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_shape002"
        android:gravity="center"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view11" />

</android.support.constraint.ConstraintLayout>