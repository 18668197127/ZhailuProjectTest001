<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="210dp"
    android:layout_height="182dp" android:background="#ffffff">

    <RadioButton
        android:id="@+id/radiobutton_avatar_1"
        android:buttonTint="#4551C0"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="end|center"
        android:textSize="15sp"
        android:text="本地相册"
        android:layout_width="100dp"
        android:layout_height="40dp" />
    <View
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#EBEBEB"/>
    <RadioButton
        android:id="@+id/radiobutton_avatar_2"
        android:buttonTint="#4551C0"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="end|center"
        android:textSize="15sp"
        android:text="打开相机"
        android:layout_width="100dp"
        android:layout_height="40dp" />
    <View
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#EBEBEB"/>


</LinearLayout>